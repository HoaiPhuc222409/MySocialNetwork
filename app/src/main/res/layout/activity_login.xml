<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/icon_login"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/fb" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Input your Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColorHint="#ECE0E0" />

    <EditText
        android:id="@+id/pass_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Your password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#F7F2F2" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Don't have an accout!"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#f00" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="or Login with "
        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="#f00"/>

    <TextView
        android:id="@+id/login_resetPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Forget password"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#f000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/google_signin_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/fb" />

<!--        <ImageView-->
<!--            android:id="@+id/facebook_signin_button"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="80dp"-->
<!--            android:layout_weight="1"-->
<!--            android:src="@drawable/fb"/>-->

<!--        <ImageView-->
<!--            android:id="@+id/twitter_signin_button"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="80dp"-->
<!--            android:layout_weight="1"-->
<!--            android:src="@drawable/fb"/>-->

    </LinearLayout>

</LinearLayout>